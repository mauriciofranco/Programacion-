// Practico de string
// Ejercicio 2
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace std;

int cantidad(string &frase);

void main(){
string frase;
cout<<"Ingrese la frase: ";
getline(cin,frase);

cout<<cantidad(frase);
getch();
}

int cantidad(string &frase){
int palabra = 1;
	for(int i = 0; i < frase.length(); i++)
		if(frase.at(i) == ' ')
			palabra++;
return palabra;
}

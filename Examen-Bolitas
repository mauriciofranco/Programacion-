void main(){
	int numcamisas;
	float preciototal,totalapagardcto;
	//Validar la entrada 
	do{
		cout<<"Ingresar numero de bolitas: ";
		cin>> numbolita;
	} while (numbolita<0);
	do{
		cout<<"Ingresar el precio: ";
		cin>> preciototal;
	} while (numcamisas<0);
	//Determinar el descuento
	if (numbolita<==2)
	cout<<"El precio total es: "<<preciototal*0.95;
	else
		if(numbolita==6)
	cout<<"El precio total es: "<<preciototal*0.8;
		else
			if(numbolita==8)
				cout<<"El precio total es: "<<preciototal*0.5;
			else
				cout<<"Error numero de bolita no considerado "<<endl;


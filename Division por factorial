#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
float factorial (float a);
float suma (float x, float n);

void main() {
	int n, sum, x;
	cout<<"Por favor ingresar la cantidad N: ";
	cin>>n;
	cout<<"Por favor ingresar los valores de X: ";
	cin>>x;
	sum = suma(x,n);
	cout<<"el resultado es: "<<sum<<endl;
getch();
}
float suma (float x, float n){
	float i, sum=0, s;
	for (i = 1; i <= n; i++) {
		s = factorial(i);
		sum = sum + (pow(x, i))/s;
	}
	return sum;
}

float factorial (float a) {
	int i = 1, sum = 1;
	while (i <= a) {
		if((a == 0) || (a == 1)){
			sum = 1;
		} else {
			sum = sum*i;
		} 
		i ++;
	}

	return sum;
